{% extends "layout.twig" %}

{% block title %} Detalles de canción {% endblock %}

{% block main_container %}
	 <div class="row">
		<div class="media col-xs-10">
		  <div class="media-left media-middle">
			<img class="media-object" src="/covers/{{ song._id }}.png" >
		  </div>
		  <div class="media-body">
			 <h2>{{ song.title }}</h2>
			 <p>{{ song.author }}</p>
			 <p>{{ song.kind }}</p>
			 <button type="button" class="btn btn-primary pull-right">{{ song.price }} €</button>
			 <!-- Cambiar el precio por "reproducir" si ya está comprada -->
		  </div>
		</div>
	  </div>

	<h2>Comentarios</h2>
	{% for comment in comments %}
		<div class ="row">
			<div class="wrap">{{ comment.author }} : {{comment.text}}</div>
		</div>
	{% endfor %}


	<h2>Añadir comentario</h2>
	<form class="form-horizontal" method="post" action="/comments/{{ song._id }}">
			<label class="control-label col-sm-2" for="texto">Comentario:</label>
			<div class="col-sm-10">
				<input id="texto" type="text" class="form-control" name="texto"
					   placeholder="..." required="true" />
				<button type="submit" class="btn btn-primary">Agregar</button>
			</div>
		</div>
	</form>

	  
